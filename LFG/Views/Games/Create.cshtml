@model LFG.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameName" class="control-label">Name of the game</label>
                <input asp-for="GameName" class="form-control" />
                <span asp-validation-for="GameName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NicknameIngame" class="control-label">Nickname ingame</label>
                <input asp-for="NicknameIngame" class="form-control" />
                <span asp-validation-for="NicknameIngame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursPlayed" class="control-label">Hours played</label>
                <input asp-for="HoursPlayed" class="form-control" />
                <span asp-validation-for="HoursPlayed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label">Rank</label>
                <input asp-for="Rank" class="form-control" />
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Server" class="control-label">Server</label>
                <input asp-for="Server" class="form-control" />
                <span asp-validation-for="Server" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label">Comments about the game</label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
